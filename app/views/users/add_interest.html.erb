<h1>New interest</h1>

<% form_for([@user, @interest]) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :category_id %><br />
    <%= f.collection_select :category_id, @categories, :id, :name %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', user_interests_path(@user) %>